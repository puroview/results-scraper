## Build from latest Python 3.7 base
FROM python:3.7-slim-buster

## Run in app folder
WORKDIR /usr/src/app

## Install dependencies
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

## Copy in files
COPY ["newsletter.py", "db.py", "gcloud.py", "notifier.py", "newsletter_temp.html", "./"]

## Run scraper
ENTRYPOINT [ "python", "./newsletter.py"]